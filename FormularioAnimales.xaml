<Window x:Class="Eventos.FormularioAnimales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eventos"
        mc:Ignorable="d"
        Title="FormularioAnimales" Height="532.527" Width="1000" Background="#FFCFE4F0">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="483" Margin="0,10,0,0" VerticalAlignment="Top" Width="982">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="19*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="165*"/>
                <ColumnDefinition Width="326*"/>
                <ColumnDefinition Width="194*"/>
                <ColumnDefinition Width="297*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblNombre" Content="Nombre:" Margin="10,10,10,0" FontWeight="Bold" FontSize="18" Height="51" VerticalAlignment="Top" RenderTransformOrigin="-0.132,1" Background="#FFB2D0F5" FontFamily="Segoe UI Black"/>
            <Label x:Name="lblSexo" Content="Sexo:" Margin="10,10,10,0" Grid.Row="1" FontSize="18" Height="50" VerticalAlignment="Top" Background="#FFB2D0F5" FontFamily="Segoe UI Black"/>
